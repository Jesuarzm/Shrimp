<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Filtros -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="16dp">

        <Spinner
            android:id="@+id/spinner_calificacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/calificacion_array"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/spinner_distancia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/distancia_array"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/spinner_tipo_servicio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/tipo_servicio_array" />
    </LinearLayout>

    <!-- Lista de Personas -->
    <ListView
        android:id="@+id/lista_personas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp" />
</LinearLayout>
